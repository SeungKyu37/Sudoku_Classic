<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="-2dp"
        android:bottom="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent background -->
            <stroke
                android:width="2dp"
                android:color="#000000" /> <!-- Border color -->
        </shape>
    </item>

    <item
        android:top="-2dp"
        android:right="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent background -->
            <stroke
                android:width="0.5dp"
                android:color="#000000" /> <!-- Border color -->
        </shape>
    </item>

</layer-list>